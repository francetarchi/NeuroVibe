<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- GENERAL -->
    <style name="Theme.NeuroVibe" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/neurovibe.purple.variant.lighter</item>
        <item name="colorPrimaryVariant">@color/neurovibe.purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/neurovibe.teal</item>
        <item name="colorSecondaryVariant">@color/neurovibe.teal.variant.lighter</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <!-- Remove action bar shadow (for older API levels) -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Set the alert dialog theme -->
        <item name="alertDialogTheme">@style/Theme.NeuroVibe.Dialog</item>
    </style>


    <!--  DIALOGS  -->
    <style name="Theme.NeuroVibe.Dialog" parent="Theme.Material3.Dark.Dialog">
        <!-- Set the main text color -->
        <item name="android:textColorPrimary">@color/dialog.message.text.color</item>

        <!-- Set the styles for the dialog buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/Theme.NeuroVibe.Dialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.NeuroVibe.Dialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.NeuroVibe.Dialog.Button.Neutral</item>
    </style>

    <style name="Theme.NeuroVibe.Dialog.Button.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neurovibe.purple</item>
    </style>

    <style name="Theme.NeuroVibe.Dialog.Button.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neurovibe.purple.variant.lighter</item>
    </style>

    <style name="Theme.NeuroVibe.Dialog.Button.Neutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/neurovibe.purple</item>
    </style>

</resources>